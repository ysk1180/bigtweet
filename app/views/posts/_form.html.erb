<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class:'form-control', rows:"3" %>
  </div>

  <div class="form-group">
    <%= form.label :power %>
    <%= form.text_area :power, class:'form-control', rows:"3" %>
  </div>

  <div class="form-group">
    <%= form.label :kind %>
    <%= form.select :kind, [["ランダム","muscle"],["ファイヤーツイート","fire"],["サンダーツイート","thunder"],["マッスルツイート","muscle"],["キャットツイート","cat"],["LOVEツイート","love"]], {}, {class: "form-control"} %>
  </div>

  <div class="actions">
    <%= form.submit "パワーツイート！", class:"btn btn-primary" %>
  </div>
<% end %>
